<% new_id = "edit-comment-#{@topic.id}" %>
<h2 class="hCenter">Beitrag bearbeiten</h2>
<%= simple_form_for([@topic, @post]) do |f| %>
	<%= f.input :content, label: "Beitrag", input_html: { id: new_id } %>
	<%= f.input :linkUrl, input_html: { id: new_id + "-lurl" } %>
	<%= f.input :linkText, input_html: { id: new_id + "-ltext" } %>
	<%= f.input :imageUrl, input_html: { id: new_id + "-iurl" } %>
	<div class="text_icons">
		<%= render 'layouts/text_decoration', id: new_id %>
	</div>
	<div class="links_right">
		<%= f.button :submit, value: "Speichern", class: "btn-special" %>
		<%= button_to "Abbrechen", :back, class: "btn btn-default btn-special" %>
	</div>
<% end %>