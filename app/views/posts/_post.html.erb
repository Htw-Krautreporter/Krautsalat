<div class="post">
	<% unless post.imageUrl == "" %>
		<img src="<%= post.imageUrl %>" class="postImage"/>
	<% end %>
	<% unless post.linkUrl == "" %>
		<a href="<%= post.linkUrl %>" target="_blank" title="<%= post.linkText %>" class="content-link"> <%= post.linkText %> </a>
	<% end %>
	<p class="post-content"><%= post.content.gsub(/\n/, '<br/>').html_safe %></p>
	<p class="post-posted-by"> <%= signature_string(post.user.username, post.created_at, post.updated_at) %></p>
	<div class="links">
		<% if post.user_id == current_user.id %>
			<%= link_to "Bearbeiten", edit_topic_post_path(post.topic, post), class: "btn btn-default" %>
		<% end %>
		<% if post.user_id == current_user.id || current_user.rights == 2 %>
			<%= link_to "Löschen", topic_post_path(post.topic, post), class: "btn btn-default", method: :delete, data: { confirm: "Möchten Sie den Beitrag wirklich löschen?" } %>
		<% end %>
	</div>
</div>