<section class="container">
	<%= form_tag("rights", method: :get, id: "search-form", class:"center") do %>
			<%= text_field_tag :search, params[:search], placeholder: "Username/Email" %>
			<%= button_tag(type: "submit", class: "btn btn-default") do%>
				<span class="glyphicon glyphicon-search"></span>
			<% end %>
	<% end %>
	<table id="manage_user_rights">
		<% @users.each do |user| %>

			<tr>
				<td><p><%= user.username %></p> <p>(<%= user.email %>)</p>
				<p><%= get_role_name(user.rights) %></p></td>

				<% if user.rights != 0 %>
					<td><%= link_to get_role_name(0), update_rights_path(user_id: user.id, right_level: 0), method: :post, class: "btn btn-default" %></td>
				<% end %>

				<% if user.rights != 1 %>
					<td><%= link_to get_role_name(1), update_rights_path(user_id: user.id, right_level: 1), method: :post, class: "btn btn-default" %></td>
				<% end %>

				<% if user.rights != 2 %>
					<td><%= link_to get_role_name(2), update_rights_path(user_id: user.id, right_level: 2), method: :post, class: "btn btn-default" %></td>
				<% end %>

			</tr>
		<% end %>
	</table>
</section>