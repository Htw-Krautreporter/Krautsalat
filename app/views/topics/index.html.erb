<% unless @own_topics.empty? %>
<section class="container">
	<h1>Eigene Themen</h1>
	<% @own_topics.each do |topic| %>
		<div class="col-md-4">
			<%= link_to topic_path(topic) do %>
				<div class="topic">
					<h2 class="topic-title"><%= topic.title %></h2>
				</div>
			<% end %>
		</div>
	<% end %>
</section>
<% end %>
<section class="container">
	<h1>Themen</h1>
	<% @topics.each do |topic| %>
		<div class="col-md-4">
			<%= link_to topic_path(topic) do %>
				<div class="topic">
					<h2 class="topic-title"><%= topic.title %></h2>
					<p class="topic-author">Erstellt von <%= topic.user.username %></p>
				</div>
			<% end %>
		</div>
	<% end %>
</section>