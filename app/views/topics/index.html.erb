<% unless @own_topics.empty? %>
	<section class="container">
		<h1>Erstellte Themen</h1>
		<% @own_topics.each do |topic| %>
			<div class="col-md-4">
				<%= link_to topic_path(topic) do %>
					<div class="topic">
						<p class="topic-author"><%= topic.user.username %></p>
						<h2 class="topic-title"><%= topic.title %></h2>
					</div>
				<% end %>
			</div>
		<% end %>
	</section>
<% end %>

<% unless @related_topics.empty? && !@own_topics.empty? %>
	<section class="container">
		<h1>Themen</h1>
		<% @related_topics.each do |topic| %>
			<div class="col-md-4">
				<%= link_to topic_path(topic) do %>
					<div class="topic">
						<p class="topic-author"><%= topic.user.username %></p>
						<h2 class="topic-title"><%= topic.title %></h2>
					</div>
				<%end%>
			</div>
		<% end %>
	</section>
<% end %>