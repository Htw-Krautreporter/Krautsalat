	<h2 class="center"><%= @topic.title %></h2>

	<h3 class="center">Aktive Benutzer</h3>
	<table>
	<% @related_users.each do |user| %>
		<tr>
			<td><p><%= user.username %> <i>"<%= user.expertise %>"</i></p></td>
